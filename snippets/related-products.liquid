{% for collection in product.collections %}
  {% if collection.handle != "frontpage" %}
    {% assign ourCollection = collection %}
  {% endif %}
{% endfor %}
{% if ourCollection and ourCollection.all_products_count > 3 %}

  <div class="section product-sample">
    <div class="inner">
        <h4><strong>{{ 'products.general.related_products_title' | t }}</strong></h4>
        <div class="items">
            {% assign count = 0 %}
            {% assign currentProduct = product %}
            {% for product in collection.products %}
                {% if product.handle != currentProduct.handle and count < 3 %}
                  <div class="item">
                      <img src="{{ product.featured_image | img_url: '1000x' }}">
                      <p>{{ product.title }}</p>
                      <p class="light">{{ product.price | money }}<p>
                  </div>
                  {% assign count = count | plus: 1 %}
                {% endif %}
            {% endfor %}
        </div>
    </div>
  </div>

{% endif %}
