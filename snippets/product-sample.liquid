<div class="section product-sample">
    <div class="inner">
        <h4><strong>{{ settings.featured-collection-header }}</strong></h4>
        <div class="items">
            {% for product in collections[settings.featured-collection].products | limit: 3 %}
                <div class="item">
                    <img src="{{ product.featured_image | img_url: '1000x' }}">
                    <p>{{ product.title }}</p>
                    <p class="light">{{ product.price | money }}<p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>